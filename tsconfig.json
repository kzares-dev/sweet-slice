{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "typeRoots": [
      "./types"
    ],
    "paths": {
      "*": [
        "./types/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "assets/**/*.png",
  ]
}